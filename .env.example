# Environment configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGO_DB=nfc_db
MONGO_DESIGNS_COLL=designs
MONGO_BACKGROUNDS_COLL=backgrounds

# Security
JWT_SECRET=your_super_secret_jwt_key_here
TRUST_PROXY=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Base URLs
PUBLIC_BASE_URL=https://your-domain.com/nfc
SITE_BASE_URL=https://your-domain.com

# Cloudinary (Optional, for image uploads if used)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# External Upload Service (Optional)
EXTERNAL_UPLOAD_URL=https://example.com/upload
UPLOAD_SECRET=your_upload_secret

# Email Configuration
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_FROM_NAME="MC PRIME NFC"
